{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Unit tests with jest",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
    },
    {
      "name": "Scraper Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "No HMR - Scraper Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Scraper Server Production",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "production",
        "PORT": "8090"
      }
    },
    {
      "name": "Experimental Live-Reload Debugging",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": [
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "PATH": "${workspaceFolder}/node_modules/.bin:${env:PATH}"
      }
    },
    {
      "name": "UI Debugger - New chrome instance",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/src/web-ui/client-src"
    },
    {
      // To make this work, you need to launch chrome with
      // remote debugging enabled, like this:
      // #> google-chrome --remote-debugging-port=9222
      // You'll need to close all chrome windows before being
      // able to launch a remote-debug enabled session,
      // at least under Linux.
      "name": "UI Debugger - Attached chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/src/web-ui/client-src"
    }
  ],
}