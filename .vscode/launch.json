{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Scraper Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Experimental Live-Reload Debugging",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": [
      ],
      "program": "${workspaceFolder}/src/web-ui/server.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "PATH": "${workspaceFolder}/node_modules/.bin:${env:PATH}"
      }
    }
  ],
}